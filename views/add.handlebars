<h1>{{ title }}</h1>
<form action="/add" method="POST">
	<div class="input-field">
		<input placeholder="Placeholder" id="title" name="title" type="text" class="validate" required>
		<label for="title">Название курса</label>
		<span class="helper-text" data-error="Введите название"></span>
	</div>
	<div class="input-field">
		<input placeholder="Placeholder" id="price" name="price" type="number" class="validate" required min="1">
		<label for="title">Стоимость курса</label>
		<span class="helper-text" data-error="Введите цену"></span>
	</div>
	<div class="input-field">
		<input placeholder="Placeholder" id="img" name="img" type="text" class="validate" required>
		<label for="title">URL обложки</label>
		<span class="helper-text" data-error="Укажите URL"></span>
	</div>

	<button class="btn btn-primary">Сохранить</button>
</form>
